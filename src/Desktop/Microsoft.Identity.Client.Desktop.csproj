    <!-- MSAL feature flags-->
    <DefineConstants>$(DefineConstants);MSAL_DESKTOP;</DefineConstants>
    <PathToMsalSources>$(MSBuildThisFileDirectory)\..\Shared</PathToMsalSources>
    <NoWarn>$(NoWarn);CS8002;NU5131;</NoWarn>

  
  </PropertyGroup>

